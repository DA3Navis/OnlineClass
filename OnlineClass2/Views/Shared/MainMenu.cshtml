@*@model List<Model.EF.Menu>*@

@{
    /**/

    var cates = (List<Model.EF.CourseCategory>)ViewBag.Cate;
    var session = (UserLogin)Session[OnlineClass2.Common.CommonConstants.USER_SESSION];

}

<div class="main-nav">
    <div class="container">
        <div class="row">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                @foreach (var item in cates)
                {
                    <li><a href="/@item.MetaTitle-@item.ID">@item.Name</a></li>
                }

                <li><a href="/gioi-thieu">Giới thiệu</a></li>
                <li><a href="/lien-he">Liên hệ</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                @if (session == null)
                {
                    <li><a href="/dang-nhap">Đăng nhập</a></li>
                    <li><a href="/dang-ky">Đăng kí</a></li>
                }
                else
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> Xin chào @session.UserName <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/danh-sach-khoa-hoc-tham-gia"><i class="glyphicon glyphicon-education"></i> Khóa học tham gia</a></li>
                            <li><a href="/thong-tin/@session.UserID"><i class="glyphicon glyphicon-duplicate"></i> Thông tin cá nhân</a></li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "User")</li>
                        </ul>
                    </li>
                }

            </ul>

        </div>

    </div>

</div>