@model OnlineClass2.Models.LoginModel

@{
    /**/

    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "loginbox" }))
{
    @Html.AntiForgeryToken()

    <div class="login-box" id="loginbox">
        <input type="hidden" name="returnUrl" value="/" />
        <input type="hidden" value="false" name="remember" id="hfRemember" />
        <div class="panel panel-info">
            <div class="panel-heading">

                <div class="panel-title">Đăng nhập</div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px">
                    @Html.ActionLink("Quên mật khẩu", "PasswordRecovery", "User")
                </div>
            </div>

            <div style="padding-top:25px; padding-bottom:0px;" class="panel-body">

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <div class="form-group">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Tên đăng nhập or E-mail">*@
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "login-username", @placeholder = "Tên đăng nhập or E-mail" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>

                <div style="margin-bottom: 10px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @*<input id="login-password" type="password" class="form-control" name="password" placeholder="Mật khẩu">*@
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @id = "login-password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div style="margin-top:10px" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <input type="submit" value="Đăng nhập" class="btn btn-success" id="btn-login" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 control">
                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                            Bạn là học viên? Bạn chưa có tài khoản?
                            <a href="/dang-ky">
                                Đăng ký tại đây
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

