@model OnlineClass2.Models.PasswordRecovery


@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PasswordRecovery", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="login-box" id="forgetBox">
        <input type="hidden" name="returnUrl" value="/" />
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Quên mật khẩu</div>
            </div>
            <div style="padding-top:25px; padding-bottom:0px;" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <div style="margin-bottom: 25px" class="input-group">
                    Để khởi tạo lại mật khẩu cho tài khoản. Bạn vui lòng nhập Tài khoản và E-mail đã đăng ký, chúng tôi sẽ gửi cho bạn một E-mail chứa đường dẫn cho phép bạn đặt lại mật khẩu đăng nhập.
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
}
                </div>
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Tên đăng nhập or E-mail">*@
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "login-username", @placeholder = "Tên đăng nhập" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>

                <div style="margin-bottom: 10px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    @*<input id="login-password" type="password" class="form-control" name="password" placeholder="Mật khẩu">*@
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div style="margin-bottom: 10px; display:none" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @*<input id="login-password" type="password" class="form-control" name="password" placeholder="Mật khẩu">*@
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @value = "123456" })
                </div>

                <div style="margin-bottom: 10px; display:none" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @*<input id="login-password" type="password" class="form-control" name="password" placeholder="Mật khẩu">*@
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @value = "123456" })
                </div>
                <div style="margin-top:10px" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <input type="submit" value="Đặt lại" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

