@model Model.EF.Lesson
@{
    ViewBag.Title = "Lesson";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lessons = (List<Model.EF.Lesson>)ViewBag.Lesson;
}

@section style{
    <style type="text/css">
        .video-wrapper {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

            .video-wrapper iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

        table {
            border-collapse: collapse;
            width: 100%;
        }

            table.tableSection {
                display: table;
                width: 100%;
            }

                table.tableSection thead,
                table.tableSection tbody {
                    width: 100%;
                }

                table.tableSection thead {
                    overflow-y: scroll;
                    display: table;
                    table-layout: fixed;
                    width: calc(100% - 16px); /* assuming scrollbar width as 16px */
                }

                table.tableSection tbody {
                    overflow: auto;
                    height: 430px;
                    display: block;
                }

                table.tableSection tr {
                    width: 100%;
                    text-align: left;
                    display: table;
                    table-layout: fixed;
                }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        a:hover {
            text-decoration: none;
        }

        .not-active {
            pointer-events: none;
            cursor: default;
            text-decoration: none;
            color: black;
        }
    </style>
}

<div class="row">
    <div class="col-md-8" style="padding: 30px ">
        <!--  <iframe width="100%" height="auto" src="https://www.youtube.com/embed/7ZMlp3-ab9U" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="0" ></iframe> -->
        <div class="video-wrapper">
            <!-- <iframe src="https://youtu.be/32sYGCOYJUM" height="100%" width="700" allowfullscreen="" frameborder="0">
        </iframe> -->
            @Html.Raw(HttpUtility.HtmlDecode(Model.LinkURL));
        </div>
        <div style="margin-top: 20px;">
            <button class="btn btn-info" style="float: right;"><i class="fa fa-toggle-right"></i> Học tiếp</button>
            <button class="btn btn-info" style="float: left;"><i class="fa fa-toggle-left"></i> Quay lại</button>
        </div>
    </div>

    <div class="col-md-4" style="padding: 30px;">
        <table class="tableSection">
            @foreach (var item in lessons)
            {
                <tr>
                    <td>
                        <a href="#" style="font-size: 120%;"><i class="fa fa-video-camera"></i> @item.Title</a>
                    </td>
                </tr>
            }
        </table>
        <table>
            <tr>
                <td>
                    <a href="#" style="font-size: 150%;" class="not-active"><i class="fa fa-book"></i> Tài liệu</a>
                </td>
            </tr>
        </table>
    </div>
</div>

